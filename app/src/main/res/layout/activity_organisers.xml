<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganisersActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Organiser"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.SotMAsia2024.PopupOverlay"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="10dp"
                android:textSize="30sp"
                android:fontFamily="@font/poppins"
                android:text="organisers"
                android:background="@drawable/rectangle_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/boilId"
                android:layout_marginTop="10dp"
                android:src="@drawable/boil_logo"
                android:layout_width="140dp"
                android:layout_height="140dp"/>

            <ImageView
                android:id="@+id/osmbdId"
                android:layout_marginTop="10dp"
                android:src="@drawable/osmbd"
                android:layout_width="300dp"
                android:layout_height="140dp"/>

            <ImageView
                android:id="@+id/ymId"
                android:layout_marginTop="10dp"
                android:src="@drawable/ymbd"
                android:layout_width="140dp"
                android:layout_height="60dp"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>